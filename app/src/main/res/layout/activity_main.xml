<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lab42.sligamer.unitconversioncalculator.MainActivity">

    <TextView
        android:id="@+id/feet_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:labelFor="@+id/input_editText"
        android:text="@string/feet"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/input_editText"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/feet" />

    <EditText
        android:id="@+id/input_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/zero"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/feet_txtView"
        android:text="@string/zero"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/meters_txtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/zero" />

    <TextView
        android:id="@+id/meters_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/meters"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/output_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/meters" />

    <TextView
        android:id="@+id/output_textView"
        android:layout_width="221dp"
        android:layout_height="43dp"
        android:layout_marginBottom="148dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
